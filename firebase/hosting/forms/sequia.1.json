		{
			"@name": "formGroup",
			"id": "vegetal1",
			"isVisible": {
				"expression": "@tipo_produccion == \"vegetal\""
			},
			"children": [
				{
					"@name": "label",
					"value": "Tipo de cultivo"
				},
				{
					"@name": "choices",
					"id": "tipo_cultivo",
